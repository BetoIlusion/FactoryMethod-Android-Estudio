<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido a la Aplicación"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Botón de Perfil -->
    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botón de Contactos -->
    <Button
        android:id="@+id/btnContactos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contactos"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botón de Productos -->
    <Button
        android:id="@+id/btnProductos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Productos"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnContactos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botón de Reportes -->
    <Button
        android:id="@+id/btnReportes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reportes"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnProductos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Espacio Publicitario -->
    <TextView
        android:id="@+id/tvPublicidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Publicidad"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnReportes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Texto Lorem Ipsum -->
    <TextView
        android:id="@+id/tvLoremIpsum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet,
         consectetur adipiscing elit. Nullam dictum,
          mauris nec auctor gravida, ligula libero
          interdum eros, in luctus odio enim ut lectus.
         Lorem ipsum dolor sit amet,
         consectetur adipiscing elit. Nullam dictum,
          mauris nec auctor gravida, ligula libero
          interdum eros, in luctus odio enim ut lectus."
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvPublicidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
